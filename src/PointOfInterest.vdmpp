class PointOfInterest
	
	types
		public String = seq1 of char;
		public RealNumber = real;
		public POIType = Type`PointOfInterestType;

	instance variables
		public name: String;
		public kilometre: RealNumber;
		public type: POIType;
	
	operations
		public PointOfInterest(n: String, k: RealNumber, t: POIType) res: PointOfInterest == (
			name := n;
			kilometre := k;
			type := t;
		)
		pre k > 0
		post res.name = n and res.kilometre = k and res.type = t;

end PointOfInterest